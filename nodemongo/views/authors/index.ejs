<h1>Author Page</h1>

<div>
    <% authors.forEach(function(author){ %>
        <div>
            <a href="/author/<%= author._id%>"><%= author.name %></a>
        </div>
        <div>Email Address: <%= author.emailAddress%></div>
        <div>Phone Number: <%= author.phoneNumber%></div>
        <div><img src="<%= author.imge%>" alt="My Image"></div>
        <div>Date Of Birth: <%= moment(author.dateofBirthday).form %></div>

        
        <div>Creat On: <%= moment(author.createAt).fromNow()%></div>

        <div>
            <form method="POST" action="/author/<%= author._id%>/delete?_method=Dalete">
            <button type="submit">Delete Author</button>
        </form>
        </div>
        
    <% }) %>
</div>